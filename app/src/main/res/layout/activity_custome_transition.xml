<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CustomerTransitionActivity">

    <Button
        android:id="@+id/bt_change_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change color"/>

    <LinearLayout
        android:id="@+id/ll_change_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_change_color_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="#FF00FF00"/>

        <TextView
            android:id="@+id/tv_change_color_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="#FF0000FF"/>

        <TextView
            android:id="@+id/tv_change_color_three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="#FFFF0000"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_change_scene_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="change scene color"/>

    <LinearLayout
        android:id="@+id/ll_change_scene_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>