<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OtherAnimationEffectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_scene_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scene change"/>

            <FrameLayout
                android:id="@+id/frame_scene_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_scene_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scene change"/>

            <FrameLayout
                android:id="@+id/frame_scene_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <FrameLayout
            android:id="@+id/frame_lol"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/iv_timo0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="80dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/iv_timo1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right|top"
                android:layout_marginTop="80dp"
                android:layout_marginRight="80dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/iv_angle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="80dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/iv_jiansheng"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="80dp"
                android:layout_marginRight="80dp"
                android:src="@mipmap/ic_launcher"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>