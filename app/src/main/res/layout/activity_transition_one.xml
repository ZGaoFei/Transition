<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TransitionOneActivity">

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="hello world!"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/bt_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_one"
                android:text="click" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <LinearLayout
            android:id="@+id/frame_auto_transition"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_auto_transition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="auto transition" />

            <LinearLayout
                android:id="@+id/ll_inner_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_auto_transition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/timu" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <FrameLayout
            android:id="@+id/frame_change_bounds"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <Button
                android:id="@+id/bt_change_bounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change bounds" />

            <TextView
                android:id="@+id/tv_change_bounds"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|start"
                android:background="@color/colorAccent" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <FrameLayout
            android:id="@+id/frame_change_clip_bounds"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <Button
                android:id="@+id/bt_change_clip_bounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change clip bounds" />

            <ImageView
                android:id="@+id/iv_change_clip_bounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Photo"
                android:src="@mipmap/timu2" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <LinearLayout
            android:id="@+id/ll_change_image_transform"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_change_image_transform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change image transform scale type" />

            <ImageView
                android:id="@+id/iv_change_image_transform"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:scaleType="center"
                android:src="@mipmap/timu2" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <FrameLayout
            android:id="@+id/frame_change_scroll"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <Button
                android:id="@+id/bt_change_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change scroll" />

            <FrameLayout
                android:id="@+id/frame_inner_change_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_change_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimary"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="change scroll"
                    android:visibility="visible" />

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_change_scroll"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <LinearLayout
            android:id="@+id/ll_change_transform"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_change_transform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change transform" />

            <FrameLayout
                android:id="@+id/frame_inner_change_transform1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/iv_change_transform"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/timu2" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_inner_change_transform2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:background="@color/colorAccent" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <FrameLayout
            android:id="@+id/frame_explode"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <Button
                android:id="@+id/bt_explode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="explode or fade" />

            <TextView
                android:id="@+id/tv_explode_one"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_explode_two"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:layout_marginTop="80dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_explode_three"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="100dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_explode_four"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="80dp"
                android:layout_marginRight="100dp"
                android:background="@color/colorPrimary" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <LinearLayout
            android:id="@+id/ll_transition_set"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_transition_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="transition set" />

            <FrameLayout
                android:id="@+id/frame_inner_transition_set1"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/iv_transition_set"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@mipmap/timu" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_inner_transition_set2"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="end"
                android:background="@color/colorAccent" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f6f6f6" />

        <FrameLayout
            android:id="@+id/frame_path_motion"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <Button
                android:id="@+id/bt_path_motion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="path motion" />

            <FrameLayout
                android:id="@+id/frame_inner_path_motion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/rectangle">

                <TextView
                    android:id="@+id/tv_path_motion"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_path_motion2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimary" />

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>